<h1>Listing map_locations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Road info</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @map_locations.each do |map_location| %>
      <tr>
        <td><%= map_location.name %></td>
        <td><%= map_location.road_info %></td>
        <td><%= link_to 'Show', map_location %></td>
        <td><%= link_to 'Edit', edit_map_location_path(map_location) %></td>
        <td><%= link_to 'Destroy', map_location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Map location', new_map_location_path %>
