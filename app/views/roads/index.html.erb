<h1>Escolha seu mapa</h1>
<br />

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @maps.all.each do |map| %>
      <tr>
        <td><%= map.name %></td>
        <td><%= link_to("Utilizar", road_path(map), id: map.id, class: "btn btn-default") %></td>
    <% end %>
  </tbody>
</table>



